<% if logged_in? -%>
  <div id="user-bar-greeting">Hola,  <%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to "Salir", logout_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'No estas conectado', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Acceder",  login_path,  { :title => "Log in" } %> /
                               <%= link_to "Crear una cuenta nueva", signup_path, { :title => "Crear una nueva cuenta" } %></div>
<% end -%>
